<h1>Topics  
<% if policy(Topic).create? %>
<%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
<% end %>
</h1>

<div class="row">
  <div class="col-md-8">
    <%= will_paginate @topics, renderer: BootstrapPagination::Rails %>
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to "##{topic.title}", topic %>
              <br>
              <br>
              <% topic.bookmarks.each do |bookmark| %>
                <%= image_tag(bookmark.thumbnail_url) %>
                <%= link_to bookmark.title, bookmark.url, :target => '_blank' %>
                <br>
              <% end %>
          </h4>
        </div>
      </div>
    <% end %>
    <%= will_paginate @topics, renderer: BootstrapPagination::Rails %>
</div>